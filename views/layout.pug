    block styles
    script(src='/Pivot 2.0.3/js/modernizr-2.6.2-respond-1.1.0.min.js')
  body
    .loader
      .spinner
        .double-bounce1
        .double-bounce2
    .nav-container
      nav.top-bar.overlay-bar
        .container
          .row.utility-menu
            .col-sm-12
              .utility-inner.clearfix
                span.alt-font &nbsp
                  i.icon.icon_mail
                  |  hello@ariseshine.net
                .pull-right
                  if !locals.user
                    a.btn.btn-primary.login-button.btn-xs(href='/auth/login') Login
                    |
                    a.btn.btn-primary.btn-filled.btn-xs(href='/auth/signup') Signup
                  else
                    span.user_amount.
                      User Amount:&nbsp; 
                    span.user_amount.value #{locals.user.amount} 
                    span.user_amount &nbsp;$
                  //
                    |
                    a.language(href='/')
                      img(alt='English', src='/Pivot 2.0.3/img/english.png')
                    |
                    a.language(href='/')
                      img(alt='English', src='/Pivot 2.0.3/img/denmark.png')
          .col-sm-3.col-md-2.columns
            a(href='/')
              img.logo.logo-light(alt='Logo', src='/images/home/Arise_72.png')
              |
              img.logo.logo-dark(alt='Logo', src='/images/home/Arise_72.png')
          .row.nav-menu.col-sm-9.col-md-10
            .columns.text-center
              ul.menu
                li
                  a(href='/aboutus' class={active: title=='About US'}) About Us
                li
                  a(href='/moneytransfer'  class={active: title=='Money Transfer'}) Money Transfer
                li
                  a(href='/internationalcall'  class={active: title=='International Calls'}) International Calls
                li
                  a(href='/policiesprocedures' class={active: title=='Policies and Procedures'}) Policies and Procedures
                li.has-dropdown
                  a(href='#' class={active: title=='My account'}) My account
                  ul.subnav
                    if locals.user
                      li
                        a(href='/myaccount/setting') Setting
                      li
                        a(href='/myaccount/phoneverify') Phone verify
                      li
                        a(href='/myaccount/addfund') Add fund
                      li
                        a(href='/auth/signout') Sign out
                    else
                      li
                        a(href='/auth/login') LogIn
                      li
                        a(href='/auth/signup') SignUp
                    
          .mobile-toggle
            i.icon.icon_menu
    block content
    .footer-container
      footer.bg-primary.short-2
        .container
          .row
            .col-sm-12
              span.text-white &copy; 2017 Arise & Shine Inc.
              |
              span.text-white
                a() Customerservice@ariseandshine.net
              |
              span.text-white +xxx 1234 567
        .contact-action
          .align-vertical
            i.icon.text-white.icon_mail
            |
            a.text-white(href='/aboutus')
              span.text-white
                | Get in touch with us
                i.icon.arrow_right
