extends ../layout
block styles
  link(href='/stylesheets/auth/signup.css', rel='stylesheet', type='text/css', media='all')
block content
  .main-container
    section.no-pad.login-page.fullscreen-element
      .background-image-holder
        img.background-image(alt='Poster Image For Mobiles', src='/Pivot 2.0.3/img/hero6.jpg')
      .container.align-vertical
        .row
          .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.text-center
            h1.text-white Create account
            .photo-form-wrapper.clearfix
              form(method='post',action='/auth/signup',enctype='multipart/form-data')
                input(name='fullname', type='text', placeholder='Enter Name')
                |
                input(name='email', type='email', placeholder='Enter Email')
                |
                input(name='password', type='password', placeholder='Enter Password')
                |
                input(name='password2', type='password', placeholder='Confirm Password')
                |
                input.btn.btn-primary.btn-filled(type='submit', value='Create')
